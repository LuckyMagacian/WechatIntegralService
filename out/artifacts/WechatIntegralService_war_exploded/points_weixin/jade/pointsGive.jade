extends template
block CSS
  title 积分转赠
  link(rel="stylesheet" href="css/public.css")
  link(rel="stylesheet" href="css/index.css")
block content
  #pointsGiveForm
    .weui-cells
      .weui-cell
        .weui-cell__hd
          label.mui-icon-extra.mui-icon-extra-gift
        .weui-cell__bd.mui-input-row
          input#points.weui-input.mui-input-clear(type='number' placeholder='请输入转赠积分值' maxlength='8')
    .weui-cells
      .weui-cell
        .weui-cell__hd
          label.rice-icon-idcard
        .weui-cell__bd.mui-input-row
          input#idcard.weui-input.mui-input-clear(type='text' placeholder='请输入受赠人身份证号' maxlength='18')
    .weui-cells
      .weui-cell.weui-cell_vcode
        .weui-cell__hd
          label.mui-icon.mui-icon-locked(style="font-weight: bold;")
        .weui-cell__bd.mui-input-row
          input#code.weui-input.mui-input-clear(type='text' placeholder='6位验证码' maxlength='6')
        .weui-cell__ft
          a.weui-vcode-btn#msgWord(href="javascript:sendGiveMsg();") 获取验证码
    .weui-cells
      .weui-cell.weui-cell_switch(style="padding: 6px 10px;")
        .weui-cell__bd.rice-color-777 是否发送短信提醒受赠人
        .weui-cell__ft
          input#giveMsgCheck.weui-switch(type="checkbox" onchange="toggleGivePhone(this.checked)")
    .weui-cells#givePhoneCells.hidden
      .weui-cell
        .weui-cell__hd
          label.mui-icon.mui-icon-phone(style="font-weight: 600;")
        .weui-cell__bd.mui-input-row
          input#givePhone.weui-input.mui-input-clear(type='text' placeholder='请输入受赠人手机号' maxlength='11')
    div(style="padding:15px 5px")
      a(href="javascript:sureGive();").weui-btn.weui-btn_primary 确认转赠
block JS
  script(src="js/public.js")
  script(src="js/pointsGive.js")