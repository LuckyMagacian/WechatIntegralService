extends template
block CSS
  title 积分转赠
  link(rel="stylesheet" href="css/public.css")
  link(rel="stylesheet" href="css/index.css")
block content
  #pointsGiveForm
    .weui-cells
      .weui-cell
        .weui-cell__hd
          label.mui-icon-extra.mui-icon-extra-gift
        .weui-cell__bd.mui-input-row
          input.weui-input.mui-input-clear(type='tel' placeholder='请输入转赠积分值' maxlength='8')
    .weui-cells
      .weui-cell
        .weui-cell__hd
          label.rice-icon-idcard
        .weui-cell__bd.mui-input-row
          input.weui-input.mui-input-clear(type='tel' placeholder='请输入受赠人身份证号' maxlength='18')
    .weui-cells
      .weui-cell.weui-cell_vcode
        .weui-cell__hd
          label.mui-icon.mui-icon-locked(style="font-weight: bold;")
        .weui-cell__bd.mui-input-row
          input.weui-input.mui-input-clear(type='tel' placeholder='6位验证码' maxlength='6')
        .weui-cell__ft
          a.weui-vcode-btn#msgWord(href="javascript:sendMsg();") 获取验证码
    div(style="padding:15px 5px")
      a.weui-btn.weui-btn_primary 确认转赠
block JS
  script(src="js/public.js")
  script(src="js/pointsGive.js")